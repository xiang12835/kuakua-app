<template>
    <view class="tabs">
        <scroll-view id="tab-bar" class="scroll-h" :scroll-x="true" :show-scrollbar="false" :scroll-into-view="scrollInto">
            <view v-for="(tab,index) in tabBars" :key="tab.id" class="uni-tab-item" :id="tab.id" :data-current="index" @click="ontabtap">
                <text class="uni-tab-item-title" :class="tabIndex==index ? 'uni-tab-item-title-active' : ''">{{tab.name}}</text>
            </view>
        </scroll-view>
        <view class="line-h"></view>
        <swiper :current="tabIndex" class="swiper-box" style="flex: 1;" :duration="300" @change="ontabchange">
            <swiper-item class="swiper-item" v-for="(tab,index1) in newsList" :key="index1">
				<!-- #ifdef APP-NVUE -->
				<list class="scroll-v list" enableBackToTop="true" scroll-y loadmoreoffset="15" @loadmore="loadMore(index1)">
					<refresh class="refresh" @refresh="onrefresh(index1)" @pullingdown="onpullingdown" :display="tab.refreshing ? 'show' : 'hide'">
						<div class="refresh-view">
							<image class="refresh-icon" :src="refreshIcon" :style="{width: (tab.refreshing || pulling) ? 0: '30px'}" :class="{'refresh-icon-active': tab.refreshFlag}"></image>
							<loading-indicator class="loading-icon" animating="true" v-if="tab.refreshing"></loading-indicator>
							<text class="loading-text">{{tab.refreshText}}</text>
						</div>
					</refresh>
					<cell v-for="(item,index2) in tab.data" :key="item.forum_id">
						<media-item :options="item" @close="close(index1,index2)" @click="goDetail(item)"></media-item>
					</cell>
					<cell class="loading-more" v-if="tab.isLoading || tab.data.length > 4">
						<text class="loading-more-text">{{tab.loadingText}}</text>
					</cell>
				</list>
				<!-- #endif -->
				<!-- #ifndef APP-NVUE -->
				<scroll-view class="scroll-v list" enableBackToTop="true" scroll-y @scrolltolower="loadMore(index1)">
					<view v-for="(item,index2) in tab.data" :key="item.forum_id">
						<media-item :options="item" @close="close(index1,index2)" @click="goDetail(item)"></media-item>
					</view>
					<view class="loading-more" v-if="tab.isLoading || tab.data.length > 4">
						<text class="loading-more-text">{{tab.loadingText}}</text>
					</view>
				</scroll-view>
				<!-- #endif -->
            </swiper-item>
        </swiper>
    </view>
</template>
<script>
    import mediaItem from './news-item.nvue';
	import apiUrl from '../../common/apiUrl.js';


    // 缓存每页最多
    const MAX_CACHE_DATA = 100;
    // 缓存页签数量
    const MAX_CACHE_PAGE = 3;


    export default {
        components: {
            mediaItem
        },
		onNavigationBarButtonTap(e) {
			if (e.index === 0) {
				// uni.showToast({
				// 	title: "创建帖子",
				// 	icon: "none"
				// })
				
				this.createForum();
				
			}
		},
        data() {
            return {
				pageNum: 1,
				pageSize: 10,
				
				
                newsList: [],
                cacheTab: [],
                tabIndex: 0,
                tabBars: [],
                scrollInto: "",
                showTips: false,
                navigateFlag: false,
                pulling: false,
                refreshIcon: "data:image/png;base64,"
            }
        },
		onPullDownRefresh() {
		    this.pageNum = 1;
			
			this.getForumTypeList();
			
			this.newsList[0].hasMordData = true;
			this.newsList[0].loadingText = '加载更多...';
			
			uni.stopPullDownRefresh();
		},

        methods: {
			
			
			createForum() {
					
			    uni.navigateTo({
			        url: './create'
			    });
			},

			onLoad: function(e) {

				this.getForumTypeList();
			// uni.startPullDownRefresh();

			},

			getForumTypeList() {

				uni.showLoading({
				    title: "加载中..."
				})
				uni.request({
				    url: apiUrl.forumTypeListApi,
				    method: 'GET',
				    data: {},
				    header: {},
				    success: res => {
				        console.log(res.data.forum_type_list);
						this.tabBars = res.data.forum_type_list;
				        uni.hideLoading();


						this.tabBars.forEach((tabBar) => {
						    this.newsList.push({
						        data: [],
						        isLoading: false,
						        refreshText: "",
						        loadingText: '加载更多...',
								hasMordData: true
						    });
						});

						this.getList(0);
				    },
				    fail: () => {},
				    complete: () => {}
				});

			},

			// getNewsListByCate(cate_id, list) {
			// 	uni.request({
			// 	    url: apiUrl.newsListByCate + '?cate=' + cate_id,
			// 	    method: 'GET',
			// 	    data: {},
			// 	    header: {},
			// 	    success: res => {
			// 	        console.log(res.data.news_list);
			// 			list = res.data.news_list;
			// 	    },
			// 	    fail: () => {},
			// 	    complete: () => {}
			// 	});
			// },



            getList(index) {
                let activeTab = this.newsList[index];

				var cate_id = this.tabBars[index].id;

				console.log('cate_id -->'+cate_id);

				// this.getNewsListByCate(cate_id, list);
				
				var params = '?type=' + cate_id + '&pageNum=' + this.pageNum + '&pageSize=' + this.pageSize;
				console.log('===========');
				console.log(params);

				uni.request({
				    url: apiUrl.forumListByTypeApi + params,
				    method: 'GET',
				    data: {},
				    header: {},
				    success: res => {
						var forum_list = res.data.forum_list;
						activeTab.data = forum_list;	
						console.log(activeTab.data);
						
						if (forum_list.length < this.pageSize) {
							activeTab.loadingText = "";
							activeTab.hasMordData = false;
						}
						
				    },
				    fail: () => {},
				    complete: () => {}
				});
            },
			
			
			getMoreList(index) {
			    let activeTab = this.newsList[index];
			
				var cate_id = this.tabBars[index].id;
			
				console.log('cate_id -->'+cate_id);
			
				// this.getNewsListByCate(cate_id, list);
				
				var params = '?type=' + cate_id + '&pageNum=' + this.pageNum + '&pageSize=' + this.pageSize;
				console.log('===========');
				console.log(params);
			
				uni.request({
				    url: apiUrl.forumListByTypeApi + params,
				    method: 'GET',
				    data: {},
				    header: {},
				    success: res => {
						
						var forum_list = res.data.forum_list;
			
						activeTab.data = activeTab.data.concat(forum_list);	
						console.log(activeTab.data);
						
						if (forum_list.length < this.pageSize) {
							activeTab.loadingText = "没有更多数据了!";
							activeTab.hasMordData = false;
						}
						
				    },
				    fail: () => {},
				    complete: () => {}
				});
			},
			
            goDetail(e) {

				console.log('aaaaaaaaaaaaaaaa');
				console.log(e.forum_id);

                if (this.navigateFlag) {
                    return;
                }
                this.navigateFlag = true;
                uni.navigateTo({
                    url: './detail?forum_id=' + e.forum_id
                });
                setTimeout(() => {
                    this.navigateFlag = false;
                }, 200)
            },
            close(index1, index2) {
                uni.showModal({
                    content: '是否删除本条信息？',
                    success: (res) => {
                        if (res.confirm) {
                            this.newsList[index1].data.splice(index2, 1);
                        }
                    }
                })
            },
			
            loadMore(e) {
				console.log('loadMore(e)----->' + e);
				
				let activeTab = this.newsList[e];
				
                // setTimeout(() => {
                //     this.getList(this.tabIndex);
                // }, 500)
				
				if (!activeTab.hasMordData) {
					return;
				}
				
				this.pageNum += 1;
				this.getMoreList(this.tabIndex);
				
				console.log("this.tabIndex----->");
				console.log(this.tabIndex);
            },
			
            ontabtap(e) {
                let index = e.target.dataset.current || e.currentTarget.dataset.current;
                this.switchTab(index);
            },
			
            ontabchange(e) {
                let index = e.target.current || e.detail.current;
                this.switchTab(index);
            },
			
            switchTab(index) {
				
				this.pageNum = 1;
                if (this.newsList[index].data.length === 0) {
                    this.getList(index);
                }

                if (this.tabIndex === index) {
                    return;
                }

                // 缓存 tabId
                if (this.newsList[this.tabIndex].data.length > MAX_CACHE_DATA) {
                    let isExist = this.cacheTab.indexOf(this.tabIndex);
                    if (isExist < 0) {
                        this.cacheTab.push(this.tabIndex);
                        //console.log("cache index:: " + this.tabIndex);
                    }
                }

                this.tabIndex = index;
                this.scrollInto = this.tabBars[index].id;

                // 释放 tabId
                if (this.cacheTab.length > MAX_CACHE_PAGE) {
                    let cacheIndex = this.cacheTab[0];
                    this.clearTabData(cacheIndex);
                    this.cacheTab.splice(0, 1);
                    //console.log("remove cache index:: " + cacheIndex);
                }
            },
			
            clearTabData(e) {
                this.newsList[e].data.length = 0;
                this.newsList[e].loadingText = "加载更多...";
            },
			
            refreshData() {},
            onrefresh(e) {
                var tab = this.newsList[this.tabIndex];
                if (!tab.refreshFlag) {
                    return;
                }
                tab.refreshing = true;
                tab.refreshText = "正在刷新...";

                setTimeout(() => {
                    this.refreshData();
                    this.pulling = true;
                    tab.refreshing = false;
					tab.refreshFlag = false;
                    tab.refreshText = "已刷新";
                    setTimeout(() => { // TODO fix ios和Android 动画时间相反问题
                        this.pulling = false;
                    }, 500);
                }, 2000);
            },
			
            onpullingdown(e) {
                var tab = this.newsList[this.tabIndex];
                if (tab.refreshing || this.pulling) {
                    return;
                }
                if (Math.abs(e.pullingDistance) > Math.abs(e.viewHeight)) {
                    tab.refreshFlag = true;
                    tab.refreshText = "释放立即刷新";
                } else {
                    tab.refreshFlag = false;
                    tab.refreshText = "下拉可以刷新";
                }
            },

        }
    }
</script>

